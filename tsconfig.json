{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./gen/ts",
    "rootDir": "./gen/ts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "gen/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "gen/ts/**/*.js",
    "gen/ts/**/*.d.ts"
  ]
}